# Funeral OCI Registry Configuration
# Copy this file to .env and modify as needed

# MongoDB Configuration
MONGO_URL=mongodb://mongo:27017
MONGO_DATABASE=oci_registry

# MinIO S3 Configuration
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=oci-registry

# Storage Backend Selection (true to disable, false to enable)
# When NO_MONGO=true, uses file-based storage
# When NO_MINIO=true, uses local file storage for blobs
NO_MONGO=false
NO_MINIO=false
LOCAL_STORAGE_PATH=/tmp/funeral-storage

# Authentication Configuration
AUTH_ENABLED=true
AUTH_ALLOW_ANONYMOUS_PULL=true

# JWT Configuration (used for token generation)
JWT_ISSUER=funeral-registry
JWT_EXPIRATION=3600

# Auto-create Admin User
AUTH_AUTO_CREATE_ENABLED=true
AUTH_AUTO_CREATE_USERNAME=admin
AUTH_AUTO_CREATE_PASSWORD=password
AUTH_AUTO_CREATE_EMAIL=admin@funeral.local
AUTH_AUTO_CREATE_ROLES=ADMIN;USER;PUSH_ALL;PULL_ALL

# MinIO Root Credentials (for the MinIO container itself)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
